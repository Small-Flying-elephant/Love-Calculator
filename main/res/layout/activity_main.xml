<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="horizontal"
    tools:context="lovecalculator.elephant.fly.small.lovecalculator.MainActivity">


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/center"
        android:layout_marginRight="30dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:id="@+id/linearLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/zodiac_male"
        android:layout_gravity="center"
       />

    <EditText
        android:id="@+id/man_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="man"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


    </LinearLayout>


    <ImageView
        android:id="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:background="@drawable/zodiac_score_heart" />


    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/center"
        android:layout_marginLeft="30dp"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/zodiac_female"
        />

    <EditText
        android:id="@+id/girl_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="girl"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    </LinearLayout>


    <Button
        android:id="@+id/ok_bt"
        android:layout_below="@+id/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok_bg"
        android:layout_centerInParent="true"
        android:text="ok"
        android:layout_marginTop="100dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout1"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_marginBottom="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="fname：John" />

            <TextView
                android:id="@+id/sname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fname"
                android:padding="2dp"
                android:text="sname：Alices" />

            <TextView
                android:id="@+id/percentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sname"
                android:padding="2dp"
                android:text="percentage：45" />

            <TextView
                android:id="@+id/result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/percentage"
                android:padding="2dp"
                android:text="result:Can choose someone better." />

        </RelativeLayout>

    </ScrollView>





</RelativeLayout>
